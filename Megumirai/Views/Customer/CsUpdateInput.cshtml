@{
    ViewBag.Title = "CsUpdateInput";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<center>
    <h2>顧客情報メンテナンス</h2>
    <div>
        顧客情報を更新します。<br>
        更新内容を入力して、「送信」ボタンを押してください。
    </div>
    <br>
    <form action="/Customer/CsUpdateCheck" method="post">
        <table border="0">
            <tr>
                <th>顧客ID</th>
                <td>@String.Format("{0:D6}", ViewBag.Model.CustomerId)<input type="hidden" name="customerid" value="@ViewBag.Model.CustomerId" /></td>
            </tr>
            <tr><th style="text-align:center" colspan="2"><br>会社情報</th></tr>
            <tr>
                <th>会社名</th>
                <td><input type="text" name="companyname" value="@ViewBag.Model.CompanyName" required /></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><input type="text" name="adress" value="@ViewBag.Model.Adress" required /></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><input type="text" name="telno" value="@ViewBag.Model.TelNo" required /></td>
            </tr>
            <tr><th style="text-align:center" colspan="2"><br>顧客担当者情報</th></tr>
            <tr>
                <th>氏名(漢字)</th>
                <td><input type="text" name="customername" value="@ViewBag.Model.CustomerName" required /></td>
            </tr>
            <tr>
                <th>氏名(かな)</th>
                <td><input type="text" name="customerkana" value="@ViewBag.Model.CustomerKana" required /></td>
            </tr>
            <tr>
                <th>部署</th>
                <td><input type="text" name="dept" value="@ViewBag.Model.Dept" required /></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><input type="text" name="email" value="@ViewBag.Model.Email" required /></td>
            </tr>
            <tr><th style="text-align:center" colspan="2"><br>認証用情報</th></tr>
            <tr>
                <th>パスワード</th>
                <td><input type="password" name="password" value="@ViewBag.Model.Password" required /></td>
            </tr>
            <tr>
                <th>パスワード(確認)</th>
                <td><input type="password" name="password" value="@ViewBag.Model.Password" required /></td>
            </tr>
        </table>
        <br>
        <input type="submit" value="送信" /><button type="button" onclick="location.href=`CsList`">戻る</button><input type="reset" value="クリア" />
    </form>
</center>
