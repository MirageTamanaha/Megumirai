@model Megumirai.Models.Customer
@{
    ViewBag.Title = "CsAddInput";

    Layout = "~/Views/Shared/_Layout3.cshtml";

}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


    <p>
        システム利用登録を行います。<br />
        下記の情報を入力して、送信ボタンを押してください。
    </p>

    @Html.ValidationSummary()
    @using (Html.BeginForm("CsAddCheck", "Customer", FormMethod.Post))
    {
        <table>

            <tr>
                <th colspan="3" style="text-align:center">会社情報</th>
            </tr>

            <tr>
                <th style="text-align:center">会社名</th>
                <td>@Html.TextBoxFor(model => model.CompanyName)</td>
                <td>@Html.ValidationMessageFor(model => model.CompanyName)</td>
            </tr>

            <tr>
                <th style="text-align:center">住所 </th>
                <td>@Html.TextBoxFor(model => model.Adress)</td>
                <td>@Html.ValidationMessageFor(model => model.Adress)</td>
            </tr>

            <tr>
                <th style="text-align:center">電話番号</th>
                <td>@Html.TextBoxFor(model => model.TelNo)</td>
                <td>@Html.ValidationMessageFor(model => model.TelNo)</td>
            </tr>

            <tr><th colspan="3" style="text-align:center">ご担当者様情報</th></tr>

            <tr>
                <th style="text-align:center">氏名（漢字)</th>
                <td>@Html.TextBoxFor(model => model.CustomerName)</td>
                <td>@Html.ValidationMessageFor(model => model.CustomerName)</td>
            </tr>

            <tr>
                <th style="text-align:center">氏名（かな</th>
                <td>@Html.TextBoxFor(model => model.CustomerKana)</td>
                <td>@Html.ValidationMessageFor(model => model.CustomerKana)</td>
            </tr>

            <tr>
                <th style="text-align:center">部署 </th>
                <td>@Html.TextBoxFor(model => model.Dept)</td>
            </tr>

            <tr>
                <th style="text-align:center">メールアドレス</th>
                <td>@Html.TextBoxFor(model => model.Email)</td>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
            </tr>

            <tr><th colspan="3" style="text-align:center">認証用情報</th></tr>

            <tr>
                <th style="text-align:center">パスワード </th>
                <td>@Html.PasswordFor(model => model.Password)</td>
                <td>@Html.ValidationMessageFor(model => model.Password)</td>
            </tr>
            <tr>
                <th style="text-align:center">パスワード（確認)</th>
                <td><input type="password" name="confpassword" required title="確認用パスワードを入力してください" /></td>
            </tr>
        </table>
        <div>
            <input type="submit" value="送信">
            <input type="reset" value="クリア" />
        </div>

    }
</center>

