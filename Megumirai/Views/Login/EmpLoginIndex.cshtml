@model Megumirai.Models.EmpLoginModel

@{
    ViewBag.Title = "EmpLoginIndex";
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

<center>
    <div>社員番号とパスワードを入力してください。</div>
    @Html.ValidationSummary()
    @using (@Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationMessageFor(model => model.EmployeeId)<br>
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <table border="1">
            <tr>
                <th>社員番号</th>
                <td> @Html.TextBoxFor(model => model.EmployeeId)</td>
            </tr>
            <tr>
                <th>パスワード</th>
                <td>@Html.PasswordFor(model => model.Password)</td>
            </tr>
        </table>
        <br>
        <div>
            <input type="submit" value="ログイン" /><input type="reset" value="クリア" />
        </div>
    }
</center>


