<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Colofulverger</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <table border="1">
        <tr>
            <th colspan="2">
                <header>
                    <div class="navbar navbar-inverse navbar-fixed-top">
                        <div class="container">
                            <div class="navbar-header">
                                @Html.ActionLink("Colorfulverger 商品発注システム", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                            </div>
                        </div>
                    </div>
                </header>
            </th>
        </tr>
        <tr>
            <td>
                <nav>
                    <div style="text-align:center">
                        メニュー
                    </div>
                    <hr color="#EEEEEE">
                    <div class="navbar-collapse collapse">
                        <ul>
                            <li>@Html.ActionLink("カタログを見る", "ItemCatalog", "Item")</li>
                            <li>@Html.ActionLink("見積確認", "CartCalc", "Cart")</li>
                            <li>@Html.ActionLink("発注ステータス確認", "OrderConfirm", "Order")</li>
                            <li>@Html.ActionLink("ログアウト", "CsLogout", "Login")</li>
                        </ul>
                    </div>
                </nav>
            </td>
            <td>
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - めぐみらい</p>
                    </footer>
                </div>
            </td>
        </tr>
    </table>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
