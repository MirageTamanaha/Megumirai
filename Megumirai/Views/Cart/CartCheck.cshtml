@{
    ViewBag.Title = "CartCheck";
}

<h2>商品を買い物かごに追加</h2>
<div>
    下記の商品を買い物かごに追加しました。<br>
    続けて商品を選ぶ場合は、左のメニューから「カタログを見る」を選択してください。<br>
    見積内容を確認するには、「見積確認ボタン」を押してください。
</div>

<img src="@ViewBag.Cart.Itemphoto">



@using (Html.BeginForm("CartCalc", "Cart", FormMethod.Post))
{
    <table border="1">
        <tr>
            <th>商品番号</th>
            <th>商品名</th>
            <th>単価</th>
            <th>数量</th>
            <th>希望納期</th>
        </tr>
        <tr>
            <td>@ViewBag.Cart.Itemid</td>
            <td>@ViewBag.Cart.Itemname</td>
            <td>@ViewBag.Cart.Unitprice</td>
            <td>@ViewBag.Cart.Quantity</td>
            <td>@ViewBag.Cart.Deliverydate</td>
            <td></td>
        </tr>
    </table>
    <br>
    <input type="hidden" value="@ViewBag.Cart">
    <input type="submit" value="見積確認">
}
